# ===========================================
# RevueTech - Variables d'environnement Coolify
# ===========================================
# RÃ¨gle importante:
# NEXT_PUBLIC_API_URL = origine API (sans suffixe /api)

NODE_ENV=production

# URLs publiques
NEXT_PUBLIC_SITE_URL=https://revuetech.fr
NEXT_PUBLIC_API_URL=https://api.revuetech.fr

# Backend
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?schema=public
REDIS_URL=redis://redis:6379
JWT_SECRET=CHANGE_ME_WITH_64_HEX_CHARS
SESSION_SECRET=CHANGE_ME_WITH_64_HEX_CHARS
ENABLE_CRON=true
UPLOAD_MAX_SIZE_MB=5
RSS_FEED_URL=https://techpulse.sourcekod.fr/api/feeds/all.xml

# Auth0
AUTH0_SECRET=CHANGE_ME_WITH_64_HEX_CHARS
AUTH0_BASE_URL=https://revuetech.fr
AUTH0_ISSUER_BASE_URL=https://YOUR_TENANT.auth0.com
AUTH0_CLIENT_ID=YOUR_CLIENT_ID
AUTH0_CLIENT_SECRET=YOUR_CLIENT_SECRET
AUTH0_DOMAIN=YOUR_TENANT.auth0.com
AUTH0_AUDIENCE=https://revuetech.fr/api
AUTH0_ADMIN_ROLE=admin
AUTH0_ADMIN_PERMISSION=admin:all
AUTH0_ROLES_CLAIM=https://revuetech.fr/roles
ADMIN_EMAILS=admin@revuetech.fr
ADMIN_SUBS=auth0|000000000000000000000000

# Email / IA
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=newsletter@revuetech.fr
MISTRAL_API_KEY=xxx

# Social OAuth (optionnel)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Frontend
NEXT_PUBLIC_ADSENSE_ID=ca-pub-xxxxxxxxxxxxxxxx

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME
GRAFANA_ROOT_URL=https://grafana.revuetech.fr
