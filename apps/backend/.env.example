# ===========================================
# RevueTech Backend - Environment Variables
# ===========================================

# Server
NODE_ENV=development
HOST=0.0.0.0
PORT=3001

# Database
DATABASE_URL="postgresql://revuetech:password@localhost:5432/revuetech?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://revuetech.fr/api

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# RSS Feed
RSS_FEED_URL=https://techpulse.sourcekod.fr/api/feeds/all.xml

# Email (Resend)
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=newsletter@revuetech.fr
ADMIN_EMAILS=admin@revuetech.fr
ADMIN_SUBS=auth0|000000000000000000000000
AUTH0_ADMIN_ROLE=admin
AUTH0_ADMIN_PERMISSION=admin:all
AUTH0_ROLES_CLAIM=https://revuetech.fr/roles

# AI (Mistral)
MISTRAL_API_KEY=xxxxx

# Uploads
UPLOAD_PATH=/workspaces/Technews/apps/backend/uploads
UPLOAD_MAX_SIZE_MB=5

# Shorts Video Generation
SHORTS_DIR=/var/www/revuetech/shorts

# Cron jobs (mettre false sur les r√©plicas secondaires)
ENABLE_CRON=true
